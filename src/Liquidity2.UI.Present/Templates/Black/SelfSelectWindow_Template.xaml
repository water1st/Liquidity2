            </Style>

        </Style.Resources>

        <Setter Property="ContentTemplate" >
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid   Margin="10,0,10,0" Grid.Row="0">
                            <Grid.DataContext>
                                <Binding Path="SelfSelectModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            </Grid.DataContext>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton GroupName="MarketBtn" Grid.Column="0" Style="{StaticResource SelfSelectButton}" IsChecked="True" Height="18" Width="45" Command="{Binding SelfSelectdataSourceSetCmd}" FontSize="12"/>
                            <RadioButton GroupName="MarketBtn" Grid.Column="1" Style="{StaticResource MarketDepthBtn}" Margin="3,0,0,0" Content="USDT"  Width="45" Height="18" Command="{Binding USDTdataSourceSetCmd}" FontSize="12"/>
                            <RadioButton GroupName="MarketBtn" Grid.Column="2" Style="{StaticResource MarketDepthBtn}" Margin="5,0,0,0" Content="HUSD" Width="45" Height="18"  Command="{Binding HUSDTdataSourceSetCmd}" FontSize="12"/>
                            <RadioButton GroupName="MarketBtn" Grid.Column="3" Style="{StaticResource MarketDepthBtn}" Margin="5,0,0,0" Content="BTC" Width="38" Height="18"  Command="{Binding BTCdataSourceSetCmd}" FontSize="12"/>
                            <RadioButton GroupName="MarketBtn" Grid.Column="4" Style="{StaticResource MarketDepthBtn}" Margin="5,0,0,0" Content="ETH" Width="38" Height="18"  Command="{Binding ETHdataSourceSetCmd}" FontSize="12"/>
                        </Grid>

                        <Grid   Margin="10,0,10,6" Grid.Row="1">
                            <Grid.DataContext>
                                <Binding Path="SelfSelectModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            </Grid.DataContext>
                            <TextBox Style="{StaticResource ResourceKey=SearchText}" x:Name="txtSearch" Text="{Binding Path=SearchText,UpdateSourceTrigger=PropertyChanged,Mode=OneWayToSource}"  Height="20" Margin="3,0,40,0"></TextBox>
                            <!--<Button Style="{StaticResource CNYConvertButton}"/>-->
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40*" />
                                <ColumnDefinition Width="30*" />
                                <ColumnDefinition Width="30*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" x:Name="column1"/>
                            <Grid Grid.Column="1" x:Name="column2"/>
                            <Grid Grid.Column="2" x:Name="column3"/>
                        </Grid>

                        <ListView Name="listView1"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Path=NowSearched,Mode=OneWay,NotifyOnSourceUpdated=True}" Grid.Row="2">
                            <ListView.DataContext>
                                <Binding Path="SelfSelectModel" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            </ListView.DataContext>
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Width="{Binding ElementName=column1,Path=ActualWidth}" Header="币种" CellTemplate="{StaticResource Symbol}"/>
                                        <GridViewColumn Width="{Binding ElementName=column2,Path=ActualWidth}" Header="最新价" CellTemplate="{StaticResource NewestPrice}" />
                                        <GridViewColumn Width="{Binding ElementName=column3,Path=ActualWidth}" Header="涨幅" CellTemplate="{StaticResource IncreaseRate}" />
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Width" Value="255"/>
        <Setter Property="Height" Value="650.5"/>
        <Setter Property="Title" Value="自选"/>
    </Style>

</ResourceDictionary>