                    xmlns:selfIn="clr-namespace:Liquidity2.UI.Windows.SelfSelect">


    <Style BasedOn="{StaticResource MainWindow_Style}" x:Key="SelfSelectWindow_Style" TargetType="{x:Type local:WindowBase}">

        <Style.Resources>
            <selfIn:SelfSelectForegroundConverter x:Key="cts" />
            <selfIn:SelfSelectIncreaseRateCoverter x:Key="dts" />
            <selfIn:StarButtonBackgroundConverter x:Key="starBackgrpoundCoverter" />

